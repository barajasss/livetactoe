<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>XYOT Admin</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body>
    <div class="container">
        <h1 class="title">XYOT Admin Panel</h1>
        <div class="row">
            <div class="col-sm-4">
                <div class="block bg-primary" onclick="navigate('/admin/users')">
                    <h4 class="subtitle">Manage Users</h4>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="block bg-info" onclick="navigate('/admin/messages')">
                    <h4 class="subtitle">Manage Messages</h4>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="block bg-success" onclick="navigate('/admin/leaderboard')">
                    <h4 class="subtitle">Check Leaderboard</h4>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="block bg-danger" onclick="logout()">
                    <h4 class="subtitle">Logout</h4>
                    <form id='logout-form' action='/admin/logout' method='POST'></form>
                </div>
            </div>
        </div>
    </div>
    <script>
        const logoutForm = document.getElementById('logout-form')

        function navigate(url) {
            window.location.href = url
        }
        function logout() {
            logoutForm.submit()
        }
    </script>
</body>

</html>